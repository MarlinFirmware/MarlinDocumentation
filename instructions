update _plugins/sitemap_generator.rb "File.exists?" becomes "File.exist?"

diff --git a/_plugins/sitemap_generator.rb b/_plugins/sitemap_generator.rb
index 2ab401f..43ec63f 100644
--- a/_plugins/sitemap_generator.rb
+++ b/_plugins/sitemap_generator.rb
@@ -126,7 +126,7 @@ module Jekyll
     def fill_pages(site, urlset)
       site.pages.each do |page|
         if !excluded?(site, page.path_to_source)
-          if File.exists?(page.path)
+          if File.exist?(page.path)
             url = fill_url(site, page)
             urlset.add_element(url)
           end


change into MarlinDocumentation directory

bundle config set path 'vendor/bundle'
bundle install
bundle exec jekyll serve --watch --incremental

bundle exec jekyll -v